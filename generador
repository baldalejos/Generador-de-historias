import random
theme=random.choice(["aeropuerto","desierto australiano","cuarto de Martina","poemario para zurdos,","techno iraki,"])
# gens setting
if theme == "aeropuerto":
    subsetting=random.choice(["America","China","Europa","Korea del norte","Africa","Mejico","Japon","Australia","las Bahamas"])
    setting=random.choice(["un pequeño pueblo en ","una gran ciudad en ","una granja en ","un colegio en ","la zona de marcha de ","los suburbios en ","los barrios pobres en ","el oceano","el planeta"])
    if setting != "el oceano" and setting != "el planeta":
        setting=setting+subsetting
    age=random.choice(["un recien nacido ","un niñito muy feo ","un chaval ","un lumbreras cejijunto ","un adolescente perturbado ","un mayor de edad responsable ","un adulto  ","un madurito sexy ","un viejo verde "])
    race=random.choice(["caucasico ","africano ","hispano ","arabe ","asiatico "])
    gengender=random.randint(0,100)
    if gengender <= 10:
         gender = ("transexual")
    if gengender >= 9:
         if gengender >= 47:
             gender = ("de Vox")
         if gengender <= 46:
             gender = ("del PP")
    protagonist=age+race+gender
    antagonist=random.choice(["una mujer ","un hombre ","un dictador","una empresa","un gobierno","una cancion","el trafico","la religion","un deseo","un rival","la ley","un viejo amigo","un perro","una prostituta","un fotodepilador de bolsillo"])
if theme == "desierto australiano":
    setting=random.choice(["el gran imperio","una zona de dunas","una tierra corrupta hasta las trancas","un oasis magico","un laberinto tortuoso","las islas flotantes","una roca mistica","un congelado grifo de cerveza","un peligroso kanguro mazao"])
    gender=random.choice(["un humano ","un demonio ","un macho ","un angel ","un transexual ","un seductor ","un rapero ","un testigo de jehova ","un elfo "])
    race=random.choice(["bizco "," humanoide ","conductor de autobus ",", gafoso ","violento ","barbudo ","cabron ","triste ","bajito ","bisexual ","salido ","gordo "])
    classs=random.choice(["y francotirador de profesion","y guerrero por naturaleza","y mago","y ladron","y navajero","y trilero","y tartamudo","y un poco pajillero","y podemita","y un poco homofobo","y sietemesino","y demasiado monarquico","y muy beato"])
    protagonist = gender+race+classs
    antagonist=random.choice(["un skater de la vieja escuela","un marimacho","un sin verguenza","un dios","un fugitivo escurridizo","un gigante","un ejercito invasor","un monstruo","un tirano","una señora gorda","una viuda alegre","un timador","un esperpento","un mariposon"])
if theme == "cuarto de Martina":
    setting=random.choice(["lo mas profundo del armario","la ventana","lo alto de la cama","la mesa donde hace los deberes","la habitacion de Olivia","la habitacion de sus padres","el baño del pasillo","al escondite secreto","el ordenador"])
    protagonist=random.choice(["un perro","un calcetin usado","un diario magico","un duende","un moco seco","un marco de fotos","un pantalon roto","un poster"])
    antagonist=random.choice(["de su hermana","los 40 principales","un ataque de ira","su madre enfadada","el pesado del tio","las fauces de Cloe","la abuela Juani","su amiga Alejandra","la tia Ana","Siri, la asistente telefonica","los limites de la salubridad","su padre recien levantado","los BTS al finalizar la gira"])
if theme == "poemario para zurdos,":
    setting=random.choice(["la perdida del estres","el mundo religioso","la busqueda de tu yo interior","la edad media","el renacimiento","la era industrial","la primera guerra mundial","la segunda guerra mundial","the Modern Era"])
    if setting == "la perdida del estres":
        figures=["Abraham Lincoln","George W. Bush Jr.","Benjamin Franklin","Donald Trump","Ronald Reagan","John Adams","Hilary Clinton","King George III","King George Washington","Andrew Jackson","Thomas Edison","Steve Jobs"]
        figure=random.choice(figures)
        antagonist=random.choice(figures)
    if setting == "el mundo religioso":
        figure=random.choice(["Jesus","Muhammad","Buddha","Krishna","Moses","L. Ron Hubbard","Joseph Smith","Zeus","Ra","Thor"])
        antagonist=random.choice(["el Cristianismo","el Islam","el Hinduismo","el Budismo","la mitologia griega","la Cienciologia ","los Mormones","el Paganismo","la herejia","el confucionismo"])
    if setting == "la busqueda de tu yo interior":
        figures=["Alejandro el magnifico","Julio Cesarr","Aristoteles","King Tut","Qin Shi Huang","Homero","Augusto","Platon","Cleopatra","Ashoka","Atila, el rey de los Hunos","Leonidas"]
        figure=random.choice(figures)
        antagonist=random.choice(figures)
