        figures=["Charlemagne","Ghenghis Khan","Saladin","William el conquistador","Ragnar Lodbrok","Oda Nobunaga","King Richard III","William Wallace","El Cid","Eleanor of Aquitaine","Erik el rojo","Vlad el empalador"]
        figure=random.choice(figures)
