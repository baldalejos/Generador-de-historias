    if setting == "el renacimiento":
        figures=["Marco Polo","Juana de  Arco","Christopher Columbus","Blackbeard","Leonardo da Vinci","William Shakespeare","Henry VIII","Michelangelo","Donatello","Galileo","Admiral Yi Sun-sin","Suleiman el Magnanimo"]
        figure=random.choice(figures)
        antagonist=random.choice(figures)
    if setting == "la era industrial":
        figures=["Henry Ford","Karl Marx","Charles Dickens","John D. Rockefeller","Thomas Edison","Nikola Tesla","Amelia Earheart","Frank C. Mars","Albert Einstein","Napoleon","Gandhi","Mark Twain"]
        figure=random.choice(figures)
        antagonist=random.choice(figures)
    if setting == "la primera guerra mundial":
        figure=random.choice(["Woodrow Wilson","Winston Churchill","Tsar Nicholas II","Lenin","Paul von Hindenburg","Ataturk"])
        antagonist=random.choice(["el imperio Otomano","Alemania","los estados unidos","Gran Bretaña","Austria-Hungria","Francia"])
    if setting == "la segunda guerra mundial":
        figure=random.choice(["Hitler","Queen Elizabeth","Franklin D. Roosevelt","Joseph Stalin","Harry Truman","General Hideki Tojo"])
        antagonist=random.choice(["los estados unidos","Alemania","la union Sovietica","el Reino Unido","Japon","Italia"])
    if setting == "la era moderna":
        figures=["Obama","Putin","Kim Jong-un","Kanye West","Bill Gates","Guido van Rossum","The Beatles","ISIS","Pope Francis","Mike Tyson","Pewdiepie","Hilary Cliton"]
        figure=random.choice(figures)
        antagonist=random.choice(figures)
    afigure=("una persona llamada ")     
    protagonist= afigure+figure     
if theme == "techno iraki,":
    setting=random.choice(["los ritmos mas hipnotizantes","las notas mas vibrantes","la esencia musical","la utopia sonora","la brecha reguetonera ","el house mas transgresivo","la livido sonora","un generador de frecuencias","la verdad de los silencios"])
    gender=random.choice(["un diskjokey automatico anarquista ","un teclado con distorsionador ","un subwofer enorme ","un twiter rompe cristales ""un cable canon-jack en la  mesa de mezclas ","un pedal loop ","un sampleador bionico ","un sintetizador policromatico ","un multiefectos para bajo","un multipistas ","un bafle gigante de marca pioner ","un secuenciador anacronico ","un amplificador de  potencia brutal "])
    classs=random.choice(["muy caro","ultimo modelo","de lo mas envolvente","tan raro como codiciado","robado en los locales de ensayo","traido directamente de alemania","de lo mas puntero","","muy underground","muy ensordecedor","de estilo vintage"])
    protagonist=gender+classs
    antagonist=random.choice(["los gustos folcloricos de la gente","todas las fiestas bacaletas","la musica clasica","el regueton mas obsceno","la inteligencia artificial musical","el spoty de pago","una nueva tecnologia","robots","la musica gratis de internet ","las bandas de rock y las tunas compostelanas"])
conflict=random.choice(["se enamoro de ","lucho en contra de ","intento destruir a ","se defendio de ","se metio en lios con","intento ser amigo de ","experimento con ","trato de evadir a ","compitio contra ","se paso de la raya con ","se vengo contra "])
end=random.choice(["Aquello no acabo bien.","Tuvo gran influencia en como evoluciono la sociedad por ello.","Nadie jamas volvio a saber nada.","Vivieron felices el resto de sus dias.","No te sigo contando que es muy fuerte","Tuvo un triste final que ya nadie recuerda.","Paso a formar parte de la historia mas reciente","Revistas del sector hicieron eco de la noticia","Fue glorosio.","Todo el mundo en aquel lugar sabia que eso ocurriria.","Menuda movida.","Parece mentira de raro que resulta.","Se lio la de dios es cristo.","Pudo ser incluso peor.","Nadie se preocupo por ello."])
print("En el",theme,"de camino hacia %s," % setting,"habia  %s" % protagonist, "que %s" % conflict+"%s." % antagonist,end)

